<html lang="en">

<%- include ../partials/header %>
<!-- Main component for a primary marketing message or call to action -->

<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="panel-title">Login</div>
        </div>

        <div style="padding-top:30px" class="panel-body">
            <% if (typeof error !== 'undefined' && error.length > 0) { %>
            <ul class="alert alert-danger col-sm-12">
                <% error.forEach((err)=> { %><li style="margin-left: 3%;"><%= err %><br></li><% }) %>
            </ul>
            <% }else if (typeof success !== 'undefined' && success.length > 0) { %>
            <div class="alert alert-success col-sm-12"><%= success %></div>
            <% } %>

            <form id="loginform" class="form-horizontal" role="form" method="post" action="/login">

                <div class="form-group">
                    <label for="contact" class="col-md-3 control-label">Email</label>
                    <div class="col-md-9">
                        <input required id="email" onfocusout="check_email(this.form.email.value)" type="email" value="<%if(typeof email!=='undefined'){%><%=email%><%}%>" class="form-control" name="email" placeholder="Email">
                        <small id="emailHelp" class="form-text text-muted" style="color:red;"><% if(typeof emailError !== 'undefined'){ %><%= emailError %> <% } %></small>
                    </div>
                </div>

                <div class=" form-group">
                        <label for="contact" class="col-md-3 control-label">Password</label>
                        <div class="col-md-9">
                            <input required id="login-password" value="" type="password" class="form-control" name="password"
                                placeholder="password">
                        </div>
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <button id="btn-login" type="submit" class="btn btn-success">Login </button>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                Don't have an account!
                                <a href="/signup">
                                    Sign Up Here
                                </a>
                            </div>
                            <div style="padding-top:15px; font-size:85%">
                                <a href="/forgot">
                                    Forgot my password
                                </a>
                            </div>
                        </div>
                    </div>
            </form>



        </div>
    </div>
</div>

<script>
    function check_email(email) {
        // alert(email);
        var email_tester =
            /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        if (!email_tester.test(String(email).toLowerCase())) {
            // alert('Invalid Email');
        }
    }
</script>

<%- include ../partials/footer %>